---
import '@fontsource/calistoga';
import '@fontsource/lato';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Lato';
    --aw-font-serif: 'Lato';
    --aw-font-heading: 'Calistoga';

    /* --aw-color-primary: rgb(1 97 239); */
    --aw-color-primary: #0d3c53;
    --aw-color-primary-inverted: #F2EBE3;
    --aw-color-secondary: #059669;
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    /* --aw-color-text-default: rgb(16 16 16); */
    --aw-color-text-default: #0d3c53;
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    /* --aw-color-bg-page: rgb(255 255 255); */
    --aw-color-bg-page: #f3f3f3;

    --aw-color-bg-page-dark: rgb(3 6 32);
    --aw-color-bg-page-extra-dark: #020e12;

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Lato';
    --aw-font-serif: 'Lato';
    --aw-font-heading: 'Calistoga';

    /* --aw-color-primary: rgb(1 97 239); */
    --aw-color-primary: #F2EBE3;
    --aw-color-primary-inverted: #0d3c53;
    --aw-color-secondary: #059669;
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    /* --aw-color-text-default: rgb(229 236 246); */
    --aw-color-text-default: #F2EBE3;
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    /* --aw-color-bg-page: rgb(3 6 32); */
    --aw-color-bg-page: #051923;
    

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
